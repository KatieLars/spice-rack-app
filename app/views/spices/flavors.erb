<h1>Spices by Flavor Profile</h1>
<h2>Select a spice for more info or to edit.</h2>

<%@flavors.each do |flavor|%>
  <%if !flavor.name.empty?%>
  <ul><h3><%=flavor.name%></h3>
      <%flavor.spices.each do |spice|%>
        <li><a href="/spices/<%=spice.slug%>"><%=spice.name%></a></li>
      <%end%></ul><br></br>
  <%elsif flavor.name.empty?%>
    <ul><h3>Unknown Flavors</h3>
      <%flavor.spices.each do |spice|%>
        <li><a href="/spices/<%=spice.slug%>"><%=spice.name%></a></li>
      <%end%></ul><br></br>
  <%end%>
<%end%>

